extends layout

block extraHeader
  script(src='https://www.google.com/recaptcha/api.js')
  script(src='/js/register.js')

block content
  div.adb-layout-dialog
    div.adb-layout-row
      form.adb-form(method='post')
        div.adb-container
          div.adb-container_header
            div.adb-container_header--title.adb-container_header--item
              legend Sign Up
          div.adb-container_content
            div.adb-form--field
              label.adb-label Project Name
              input.adb-text__full_width(type='text', name='projectName', required='')
            div.adb-form--field
              label.adb-label Endpoint Url
              input.adb-text__full_width(type='text', name='url', required='', pattern='https?://.+')
            div.adb-form--field
              div.g-recaptcha(data-sitekey='6LczEhYTAAAAAKUc0Kr-esY2mPtTFqB3RrvYGQRm')
          div.adb-container_footer
            menu.adb-toolbar
              button.adb-button__primary(type='submit') Sign Up
